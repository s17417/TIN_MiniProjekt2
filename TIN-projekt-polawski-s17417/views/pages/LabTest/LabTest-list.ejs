<%- include('../../fragments/header.ejs') %>

<main>
	<h2><%=__('labTest.list.pageTitle')%></h2>
	<table class="table-list">
		<thead>
			<tr>
				<th><%=__('labTest.fields.name')%></th>
				<th><%=__('labTest.fields.units')%></th>
				<th><%=__('list.actions.title')%></th>
			</tr>
		<tbody>
			<% for (let lab of labs) { %>
				<tr>
					<td><%= lab.name %></td>
					<td><%= lab.units %></td>
					<td>
						<ul class="list-actions">
							<li><a href="/labTests/details/<%=lab._id %>" class="list-actions-button-details"><%=__('list.actions.details')%></a>
							</li>
							<li><a href="/labTests/edit/<%=lab._id %>" class="list-actions-button-edit"><%=__('list.actions.edit')%></a></li>
							<li><a href="/labTests/delete/<%=lab._id %>" class="list-actions-button-delete"><%=__('list.actions.delete')%></a></li>

						</ul>
					</td>
				</tr>
			<% } %>
		</tbody>


	</table>
	<p>
		<a href="/labTests/add" class="button-add"><%=__('labTest.list.addNew')%></a>
	</p>
</main>

<%- include('../../fragments/footer.ejs') %>