<%- include('../../fragments/header.ejs') %>

<main>
    <h2>Szczegóły pacjenta</h2>
    <form action="" class="form">
        <fieldset>
            <legend>Pacjent</legend>

            <label for="firstname"> Imię:<sup>*</sup></label>
            <input type="text" name="firstname" id="firstname" value="Janina" disabled />

            <label for="surname"> Nazwisko:<sup>*</sup></label>
            <input type="text" name="surname" id="surname" value="Kowalska" disabled />

            <label for="birthdate">Data urodzenia:</label>
            <input type="date" id="birthdate" name="birthdate" min="2018-01-01" value="1978-10-09" disabled />

            <label for="idnumber"> PESEL:</label>
            <input type="text" name="idnumber" id="idnumber" value="01234567890" disabled />

            <label for="PatientComments"> Uwagi:</label>
            <textarea name="PatientComments" id="PatientComments" rows="10" cols="30" disabled>
                </textarea>

            <div class="form-buttons">
                <a href="Patient-form_Kowalska.html" class="form-button-edit">Edytuj</a>
            </div>
        </fieldset>
    </form>

    <h2>Lista Zleconych badań</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>Badanie laboratoryjne</th>
                <th>Status</th>
                <th>Data zlecenia</th>
                <th>Data wyniku</th>
                <th>Wynik</th>
            </tr>
        <tbody>
            <tr>
                <td>Troponina</td>
                <td>Cito</td>
                <td>01-10-2020</td>
                <td>08-10-2020</td>
                <td>5,5 UI</td>
            </tr>

        </tbody>


    </table>
    <div>
        <a href="/patients/" class="button-return">Powrót</a>
    </div>
</main>

