<%- include('../../fragments/header.ejs') %>

<main>
	<h2><%=__('order.list.pageTitle')%></h2>
	<table class="table-list">
		<thead>
			<tr>
				<th><%=__('patient.fields.firstName')%></th>
				<th><%=__('patient.fields.lastName')%></th>
				<th><%=__('patient.fields.birthdate')%></th>
				<th><%=__('patient.fields.idnumber')%></th>
				<th><%=__('order.fields.orderDate')%></th>
				<th><%=__('order.fields.resultDate')%></th>
				<th><%=__('order.fields.result')%></th>
				<th><%=__('list.actions.title')%></th>
			</tr>
		<tbody>
			<% for (let ord of ords) { %>
			<tr>
				<td><%= ord.patient.firstname %></td>
				<td><%= ord.patient.surname %></td>
				<td><%= ord.patient.birthdate.toISOString().split('T')[0] %></td>
				<td><%= ord.labTest.name %></td>
				<td><%= ord.orderDate==null ? '' : ord.orderDate.toISOString().split('T')[0] %></td>
				<td><%= ord.resultDate==null ? '' : ord.resultDate.toISOString().split('T')[0] %></td>
				<td><%= ord.resultValue==null ? '' : ord.resultValue+' '+ord.labTest.units %> </td>
				<td>
					<ul class="list-actions">
						<li><a href="/orders/details/<%= ord._id %>" class="list-actions-button-details"><%=__('list.actions.details')%></a>
						</li>
						<li><a href="/orders/edit/<%= ord._id %>" class="list-actions-button-edit"><%=__('list.actions.edit')%></a></li>
						<li><a href="/orders/delete/<%= ord._id %>" class="list-actions-button-delete"><%=__('list.actions.delete')%></a></li>

					</ul>
				</td>
			</tr>

		</tbody>

		<% } %>
	</table>
	<p>
		<a href="/orders/add" class="button-add"><%=__('order.list.addNew')%></a>
	</p>
</main>

<%- include('../../fragments/footer.ejs') %>