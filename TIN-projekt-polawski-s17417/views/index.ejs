<%- include('./fragments/header.ejs') %>

<main>
	<h2><%=__('main-page.content')%></h2>
	<% if(!loggedUser) { %>
		<div id="login" class="loginForm">
			<h4><%=__('authentication.title')%></h4>
			<form method="post" action="/login" novalidate>
				<label for="email"><%=__('authentication.email')%></label>
				<input type="email" id="email" name="email">
			
				<label for="password"><%=__('authentication.password')%></label>
				<input type="password" id="password" name="password">
		   
				<input type="submit" value="<%=__('authentication.btnLabel')%>">
			</form>
		</div>
		<% } else {%>
			<p>lorem ipsum.....</p>
		<%}%>
		<span id="loginErrors"  class="errors-text"><%= loginError ? loginError : ''%></span>
</main>


<%- include('./fragments/footer.ejs') %>